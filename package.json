{
  "name": "portfolio-be",
  "version": "0.0.1",
  "description": "The backend API of my portfolio site",
  "main": "./src/index.js",
  "scripts": {
    "build": "npm run clear && mkdir dist && babel src --ignore ./src/__tests__,./src/__mocks__ -d dist",
    "clear": "rm -rf ./dist",
    "createSA": "babel-node ./scripts/createSuperAdmin.js",
    "dev": "NODE_ENV=development nodemon",
    "lint": "eslint --fix ./src",
    "migrate": "sequelize db:migrate",
    "rollback": "sequelize db:migrate:undo:all",
    "rollmigrate": "npm run rollback && npm run migrate && npm run seed",
    "seed": "sequelize db:seed:all",
    "start": "NODE_ENV=production npm run migrate && NODE_ENV=production node ./bin/prod",
    "test": "NODE_ENV=test npm run lint && NODE_ENV=test jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IyiKuyoro/portfolio-be.git"
  },
  "author": "Opeoluwa Iyi-Kuyoro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IyiKuyoro/portfolio-be/issues"
  },
  "homepage": "https://github.com/IyiKuyoro/portfolio-be#readme",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11"
  },
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "bcrypt": "^3.0.6",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "pg": "^7.10.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.7.5",
    "winston": "^3.2.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.js",
      "**/*.spec.js",
      ".git"
    ],
    "watch": [
      "src"
    ],
    "exec": "node ./bin/dev",
    "ext": "js"
  }
}
